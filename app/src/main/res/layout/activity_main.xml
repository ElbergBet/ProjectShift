<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:src="@drawable/layout__main_up">


    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttontojim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/back_main_page"
            android:drawableStart="@drawable/ic_jim_vector"
            android:drawablePadding="2dip"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingLeft="22dip"
            android:paddingRight="26dip"
            android:singleLine="true"
            android:text="Качалка" />

        <Button
            android:id="@+id/buttontospa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/back_main_page"
            android:drawableStart="@drawable/ic_spa_vector"
            android:drawablePadding="2dip"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingLeft="22dip"
            android:paddingRight="26dip"
            android:singleLine="true"
            android:text="СПА" />


        <Button
            android:id="@+id/buttontobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/back_main_page"
            android:drawableStart="@drawable/ic_bar_vector"
            android:drawablePadding="2dip"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingLeft="22dip"
            android:paddingRight="26dip"
            android:singleLine="true"
            android:text="Бар" />

        <Button
            android:id="@+id/buttontopool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/back_main_page"
            android:drawableStart="@drawable/ic_pool_vector"
            android:drawablePadding="2dip"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingLeft="22dip"
            android:paddingRight="26dip"
            android:singleLine="true"
            android:text="Бассейн" />




    </LinearLayout>
</LinearLayout>